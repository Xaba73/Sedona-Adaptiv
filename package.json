{
  "name": "sedona",
  "private": true,
  "description": "Личный проект «Мой» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.2.5",
    "browser-sync": "2.26.14",
    "gulp": "4.0.2",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.0",
    "gulp-sass": "5.1.0",
    "gulp-sourcemaps": "3.0.0",
    "node-sass": "7.0.1",
    "postcss": "8.2.8",
    "stylelint": "14.8.2",
    "stylelint-config-htmlacademy": "^0.1.12",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" ----custom-syntax postcss-sass",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp styles",
    "start": "gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "dependencies": {
    "postcss-sass": "^0.5.0",
    "stylelint-scss": "^4.2.0"
  }
}
